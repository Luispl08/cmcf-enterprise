rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Función auxiliar para verificar si el usuario está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Función auxiliar para verificar si es admin
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Usuarios - pueden leer su propio perfil y actualizarlo (excepto role y membershipStatus)
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isAuthenticated() && 
                       request.auth.uid == userId &&
                       (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'membershipStatus']));
      allow delete: if isAdmin();
    }
    
    // Planes - lectura pública, escritura solo admin
    match /plans/{planId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Clases - lectura pública, escritura solo admin
    match /classes/{classId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Bookings (Reservas de Clases) - usuarios pueden ver y gestionar sus propias reservas
    match /bookings/{bookingId} {
      allow read: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && 
                       (resource.data.userId == request.auth.uid || isAdmin());
      allow update: if isAdmin();
    }
    
    // Competencias - lectura pública, escritura solo admin
    match /competitions/{compId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Registros de Competencias - usuarios pueden crear y ver sus propios registros
    match /competitionRegistrations/{registrationId} {
      allow read: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid;
      allow update: if isAdmin(); // Solo admin puede aprobar/rechazar
      allow delete: if isAdmin();
    }
    
    // Pagos - usuarios pueden ver sus propios pagos y crear nuevos
    match /payments/{paymentId} {
      allow read: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || 
                      resource.data.userEmail == request.auth.token.email ||
                      isAdmin());
      allow create: if isAuthenticated();
      allow update: if isAdmin(); // Solo admin puede verificar pagos
      allow delete: if isAdmin();
    }
    
    // Entrenadores - lectura pública, escritura solo admin
    match /trainers/{trainerId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Reseñas - lectura pública, usuarios autenticados pueden crear
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAdmin();
    }
    
    // Configuración - lectura pública, escritura solo admin
    match /config/{configId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Regla por defecto: Bloquear todo lo demás
    match /{document=**} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
  }
}
